<!--components/area-header/index.wxml-->
<view class="header">
  <view class="title">{{title}}</view>
  
  <view class="right" wx:if="{{showRight}}" bindtap="handleRightClick">
    <view class="slot">
      <slot></slot>
    </view>
    <view class="default">
      <text>{{rightText}}</text>
      <image class="image" src="/assets/images/player/rightArrow.png" mode=""/>
    </view>
  </view>
</view>