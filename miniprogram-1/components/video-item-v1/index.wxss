/* components/video-item-v1/index.wxss */
.item{
  /* display: flex; */
  /* background-color: blue; */
  width: 350rpx;
}

.item .album{
  position: relative;
}

.item .album .info{
  display: flex;
  justify-content: space-between;
  background-color: rgba(204, 204, 204, 0.185);
  position: absolute;
  bottom: 14rpx;
  width: 90%;
  padding: 0 5%;
  font-size: 32rpx;
  color: white;
}

.item .image{
  width: 350rpx;
  height: 200rpx;
}

.item .content{
  font-size: 32rpx;
  padding: 0 10rpx;
  /* 单行省略
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap; */
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; /* 这里是超出几行省略 */
  overflow: hidden;
}