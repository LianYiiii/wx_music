.ranking-area .ranking-content .ranking-songer{
  display: inline;
  color: rgb(150, 150, 150);
}

.ranking-area .image {
  width: 250rpx;
  height: 250rpx;
  border-radius: 0 10rpx 10rpx 0;
}

.ranking-area .play-count {
  position: absolute;
  bottom: 0;
  right: 0;
  height: 40rpx;
  padding: 5rpx 10rpx 5rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  background-color: rgba(87, 87, 87, 0.479);
  border-radius: 10rpx;
}