/* components/ranking-area-item/index.wxss */

.ranking-area {
  position: relative;

  display: flex;
  margin: 0 30rpx 20rpx;
  margin-bottom: 30rpx;
  background-color: rgb(235, 235, 235);
  border-radius: 10rpx;
}

.ranking-area .ranking-content {
  flex: 1;
  padding: 30rpx 0 30rpx 30rpx;
  font-size: 30rpx;
}

.ranking-area .ranking-content .content-title{
  font-size: 35rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
}

.ranking-area .ranking-content .ranking-list{
  width: 350rpx;
  line-height: 1.5;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

